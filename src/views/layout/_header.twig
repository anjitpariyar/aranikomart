    <nav class="navbar">
      <ul class="navbar-nav">
        <li class="nav-item brand">
          <a href="/" class="nav-link logo">ARANIKOMART</a>
        </li>
        <li class="nav-item search-form">
          <div class="form-wrapper">
            <i class="bi bi-search"></i>
            <input
            class="form-control"
            type="search"
            list="search-list"
            placeholder="Search"
            />
            <datalist id="search-list">
              <option value="Search 1"></option>
